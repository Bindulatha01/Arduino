/* Program on UserInput */

char receivedChar;
boolean newData = false;

void setup() {
   Serial.begin(9600);
   Serial.println("<Arduino is ready>");
  
}

void loop() {
   recvOneChar();
   showNewData();
}
void recvOneChar(){
  if (Serial.available() > 0){
    receivedChar = Serial.read();
    newData = true;
  }
}
void showNewData(){
  if (newData == true){
    Serial.print("You Entered...");
    Serial.println(receivedChar);
    newData = false; 
  }
}
